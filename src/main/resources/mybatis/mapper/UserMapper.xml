<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wsa.mapper.UserMapper">
    <select id="selectAllUsers" resultType="com.wsa.model.User">
        SELECT * FROM users;
    </select>

    <select id="findByUsername" parameterType="string" resultType="com.wsa.model.User">
        SELECT * FROM users WHERE username = #{username};
    </select>

    <select id="findAuthoritiesByUsername" parameterType="string" resultType="com.wsa.model.Authority">
        SELECT authority FROM authorities WHERE username = #{username};
    </select>
</mapper>
